{
  "dockerComposeFile": "compose.yaml",
  "extensions": [
    "EditorConfig.EditorConfig",
    "taylorfausak.purple-yolk"
  ],
  "postCreateCommand": "cabal --ignore-project update",
  "service": "devcontainer",
  "settings": {
    "editor.formatOnSave": true,
    "editor.rulers": [
      80
    ],
    "purple-yolk.brittany.command": "docker/devcontainer/hackage.sh ormolu --mode inplace",
    "purple-yolk.ghci.command": "cabal repl --repl-options -ddump-json",
    "purple-yolk.hlint.command": "docker/devcontainer/hackage.sh hlint --json --no-exit-code",
    "purple-yolk.hlint.onSave": true
  },
  "workspaceFolder": "/workspaces/monadoc"
}
